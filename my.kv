# Main Window
<StandardScreen>:
    name: "standard"

    # Application top bar
    MDTopAppBar:
        id: topbar
        title: "Standard"
        left_action_items: [["menu", lambda x: app.menu.open()]]
        right_action_items: [["theme-light-dark", lambda x: app.change_theme()]]
        pos_hint: {"center_y": 0.95}


    # The Text field for inputting values to calculate
    MDTextField:
        id: text_bar
        hint_text: "Enter your problem"
        helper_text: "Feel free!"
        pos_hint: {"center_y": 0.85}
        mode: "fill"



    # The buttons are arranged in rows of 4.

    # Row 1
    MDRaisedButton:
        id: percent
        text: "%"
        pos_hint: {"center_x": .1, "center_y": .6}
        on_release:
            root.ids.text_bar.text += "/100"
            root.ids.text_bar.hint_text = root.ids.text_bar.text
            root.evaluate()
    MDRaisedButton:
        id: clearall
        text: "CE"
        pos_hint: {"center_x": .35, "center_y": .6}
        on_release:
            root.ids.text_bar.text = ""
            root.ids.text_bar.hint_text = "Enter your problem."
    MDRaisedButton:
        id: clear
        text: "C"
        pos_hint: {"center_x": .6, "center_y": .6}
        on_release:
            root.ids.text_bar.text = ""
    MDRaisedButton:
        id: erase
        text: "<-"
        pos_hint: {"center_x": .85, "center_y": .6}
        on_release:
            root.erase()

    
    # Row 2
    MDRaisedButton:
        id: oneover
        text: "1/x"
        pos_hint: {"center_x": .1, "center_y": .5}
        on_release:
            root.ids.text_bar.hint_text = "1/" + root.ids.text_bar.text
            root.evaluate()
    MDRaisedButton:
        id: squared
        text: "x^2"
        pos_hint: {"center_x": .35, "center_y": .5}
        on_release:
            root.ids.text_bar.hint_text = root.ids.text_bar.text + "**2"
